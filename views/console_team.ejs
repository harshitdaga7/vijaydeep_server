<!doctype html>
<html lang="en">

<%- include("partials/head",{title:title,meta_description : meta_description}); -%>

    <body>
        <%- include("partials/navbar",{role:role,contact1:contact1,contact2:contact2,email:email}); -%>

            <!-- Main content -->
            <main>

                <div class="container">
                    <div class="row border rounded rounded-3 shadow-lg my-3">

                        <div class="col-sm-12 col-md-12 col-lg-6">

                            <div class="row">

                                <form>

                                    <div style="display:flex;justify-content:center;flex-direction: column; align-items:center;"
                                        class=" mt-3  border p-5 border-2 rounded-3 shadow  bg-light bg-gradient">
                                        <h2>Add New Team Member?</h2>


                                        <div style=" max-height:200px; max-width:200px; border-radius: 50%; width:100%; overflow: hidden;"
                                            class="ratio ratio-1x1 shadow mx-auto">
                                            <img id = "create_team_preview" style="object-fit: cover;" src="/images/image.jpg">
                                        </div>

                                        <div class="mt-3">
                                            <div class="mb-3 ">
                                                <label for="avatar">Choose a profile picture:</label>
                                                <input type="file" id="create_team_image" name="image" onchange="create_team_preview_()" accept="image/*">
                                            </div>
                                            <div class="mb-3">
                                                <label for="create_team_name"   class="form-label">name</label>
                                                <input type="text" maxlength="100" placeholder="maxlength 100 characters." class="form-control" id="create_team_name"
                                                    aria-describedby="">

                                            </div>
                                            <div class="mb-3">
                                                <label for="create_team_position" class="form-label">Position</label>
                                                <input type="text" maxlength="100" placeholder="maxlength 100 characters." class="form-control" id="create_team_position"
                                                    aria-describedby="">

                                            </div>
                                            <div class="mb-3">
                                                <label for="create_team_bio"  class="form-label">Bio</label>
                                                <textarea type="text" maxlength="300" placeholder="maxlength 300 characters." class="form-control" id="create_team_bio"
                                                    aria-describedby=""></textarea>

                                            </div>

                                            <hr>
                                            <div style="margin: 5%;"> <img src="/images/icons/phone.png" height="26px"
                                                    width="auto">
                                                <label for="create_team_contact1" class="form-label">Contact Number
                                                    1</label>
                                                <input type="tel" class="form-control" id="create_team_contact1">
                                            </div>
                                            <div style="margin: 5%;">
                                                <img src="/images/icons/phone.png" height="26px" width="auto">
                                                <label for="create_team_contact_2" class="form-label">Contact Number
                                                    2</label>
                                                <input type="tel" class="form-control" id="create_team_contact2">
                                            </div>

                                            <div style="margin: 5%;"> <img class="mx-2" src="/images/icons/mail.png"
                                                    height="26px" width="auto"><label for="create_team_email"
                                                    class="form-label"> Email</label>
                                                <input type="text" class="form-control" id="create_team_email"
                                                    aria-describedby="">
                                            </div>


                                            <hr>

                                            <div class="mb-3">

                                                <img src="/images/icons/linkedin.png" height="26px" width="auto">

                                                <label for="create_team_linkedin" class="form-label">linkedin-link</label>
                                                <input type="url" class="form-control" id="create_team_linkedin"
                                                    aria-describedby="">
                                            </div>

                                            <div class="mb-3">

                                                <img src="/images/icons/twitter.png" height="26px" width="auto">

                                                <label for="create_team_twitter" class="form-label">twitter-link</label>
                                                <input type="url" class="form-control" id="create_team_twitter"
                                                    aria-describedby="">
                                            </div>

                                            <!-- <div class="mb-3">

                                                <img src="icons8-instagram-30.png" height="26px" width="auto">

                                                <label for="exampleInputname" class="form-label">instagram-link</label>
                                                <input type="text" class="form-control" id="exampleInputname"
                                                    aria-describedby="">
                                            </div>

                                            <div class="mb-3">

                                                <img src="icons8-facebook-30.png" height="26px" width="auto">

                                                <label for="exampleInputname" class="form-label">facebook-link</label>
                                                <input type="text" class="form-control" id="exampleInputname"
                                                    aria-describedby="">
                                            </div> -->


                                        </div>

                                    </div>





                                    <button type="submit" id = "create_team_btn" class="btn btn-danger bg-gradient my-4">Add New Team
                                        Member</button>
                                </form>
                            </div>

                        </div>

                        <div class="col-sm-12 col-md-12 col-lg-6 p-3 text-center">

                            <h2>Update/Delete Team info?</h2>


                            <div class="list-group shadow-lg overflow-auto" style="max-height: 1400px;" id="team_container">

                                <!-- card -->
                                <div class="list-group-item list-group-item-action d-flex gap-3 py-3 content-hover-red"
                                    aria-current="true">


                                    <div style="max-height:100px; max-width:100px;  width:100%; overflow: hidden;"
                                        class="ratio ratio-1x1 shadow mx-auto">
                                        <img class="" src="image.jpg">
                                    </div>

                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <button type="button" class="btn text-start" data-bs-toggle="modal"
                                            data-bs-target="#updateTeam">
                                            <h5 class="mb-0 my-2">Name</h5>
                                            <p class="mt-2 mb-0 opacity-75"> Position</p>
                                        </button>

                                    </div>




                                    <button type="button" class="btn-close" data-bs-toggle="modal"
                                        data-bs-target="#deleteMemberModal"></button>
                                </div>




                            </div>



                        </div>

                    </div>
                </div>
                </div>

            </main>

            <!-- update team -->
            <div class="modal fade " id="updateTeam" tabindex="-1" aria-labelledby="updateTeamLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="updateTeamLabel">Update Team Member: <blue class="text-primary">
                                    Name
                                </blue> ?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <div class="row  ">

                                <form>

                                    <div style="display:flex;
            justify-content:center;
            flex-direction: column;
            align-items:center;" class=" mt-3  border p-5 border-2 rounded-3 shadow  bg-light bg-gradient">
                                        <h2>Update info?</h2>
            
            
            <div style=" max-height:200px; max-width:200px; border-radius: 50%; width:100%; overflow: hidden;"
                                            class="ratio ratio-1x1 shadow mx-auto">
                                            <img class="" src="image.jpg">


                                    </div>

                                    <div class="mt-3">
                                        <div class="mb-3 ">
                                            <label for="avatar">Choose a profile picture:</label>
                                            <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg">
                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleInputname" class="form-label">name</label>
                                            <input type="text" class="form-control" id="exampleInputname"
                                                aria-describedby="">

                                        </div>
                                        <div class="mb-3">
                                            <label for="exampleInputPosition" class="form-label">Position</label>
                                            <input type="text" class="form-control" id="exampleInputPosition"
                                                aria-describedby="">

                                        </div>
                                        <div class="mb-3">
                                            <label for="create_team_bio" class="form-label">Bio</label>
                                            <textarea type="text" class="form-control" id="create_team_bio"
                                                aria-describedby="">
                                  </textarea>

                                        </div>

                                        <hr>
                                        <div style="margin: 5%;"> <img src="icons8-phone-ringing.gif" height="26px"
                                                width="auto">
                                            <label for="create_team_contact1" class="form-label">Contact Number 1</label>
                                            <input type="number" class="form-control" id="create_team_contact1">
                                        </div>
                                        <div style="margin: 5%;">
                                            <img src="icons8-phone-ringing.gif" height="26px" width="auto">
                                            <label for="create_team_contact_2" class="form-label">Contact Number 2</label>
                                            <input type="number" class="form-control" id="create_team_contact_2">
                                        </div>

                                        <div style="margin: 5%;"> <img class="mx-2" src="icons8-gmail-logo.gif"
                                                height="26px" width="auto"><label for="create_team_email"
                                                class="form-label"> Email</label>
                                            <input type="text" class="form-control" id="create_team_email"
                                                aria-describedby="">
                                        </div>


                                        <hr>

                                        <div class="mb-3">

                                            <img src="icons8-linkedin-30 (1).png" height="26px" width="auto">

                                            <label for="exampleInputname" class="form-label">linkedin-link</label>
                                            <input type="text" class="form-control" id="exampleInputname"
                                                aria-describedby="">
                                        </div>

                                        <div class="mb-3">

                                            <img src="icons8-twitter-24.png" height="26px" width="auto">

                                            <label for="exampleInputname" class="form-label">twitter-link</label>
                                            <input type="text" class="form-control" id="exampleInputname"
                                                aria-describedby="">
                                        </div>

                                        <div class="mb-3">

                                            <img src="icons8-instagram-30.png" height="26px" width="auto">

                                            <label for="exampleInputname" class="form-label">instagram-link</label>
                                            <input type="text" class="form-control" id="exampleInputname"
                                                aria-describedby="">
                                        </div>

                                        <div class="mb-3">

                                            <img src="icons8-facebook-30.png" height="26px" width="auto">

                                            <label for="exampleInputname" class="form-label">facebook-link</label>
                                            <input type="text" class="form-control" id="exampleInputname"
                                                aria-describedby="">
                                        </div>






                                    </div>

                            </div>





                            <button type="submit" class="btn btn-danger bg-gradient my-4">Update Info</button>
                            </form>
                        </div>





                        <span class="text-secondary" style="font-size: 15px;"> Are you sure you want to Update ? </span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
            </div>

            <!-- delete member -->
            <div class="modal fade " id="deleteMemberModal" tabindex="-1" aria-labelledby="deleteMemberModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteMemberModalLabel">Confirm Delete ?</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <span class="text-secondary" style="font-size: 15px;"> Are you sure you want to Delete :
                                <blue class="text-primary">Name</blue> ? </span>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="button" class="btn btn-danger bg-gradient text-light">Delete</button>
                        </div>
                    </div>
                </div>
            </div>

            <%- include("partials/footer",{contact1:contact1,contact2:contact2,email:email,address:address}); -%>

                <%- include("partials/tail"); -%>
            
            <script src = "/javascripts/console_team.js"></script>

    </body>

</html>