<!doctype html>
<html lang="en">

  <%- include("partials/head",{title:title,meta_description : meta_description}); -%>
  <style>

      input[type=file] {

        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 150px;

      }
  </style>
  <body>
    <%- include("partials/navbar",{role:role,contact1:contact1,contact2:contact2,email:email}); -%>

        <!-- Main content -->
        <main>

            <div class="container">
                <div class="row border rounded rounded-3 shadow-lg my-3">
                    <div class="col-sm-12 col-md-12 col-lg-8 p-5 ">
                        <form>
    
                            <h2>Add New Product</h2>
                           
    
                            <!-- image view -->
                            <div class="row">
                                <div class="col-lg-4 ">
                                    <div style="height:108px;width: 192px; overflow:hidden;  display: flex; align-items: center; justify-content: center;" class="shadow-lg mx-3" >
    
                                    <img class=" " style = "max-width:224px;" loading="lazy" id = "product_image1_preview" src="/images/image.jpg">
                                    </div>
                                    <div class="mt-3">
                                        <div class="mb-3 ">
                                            <label for="avatar">Choose Product Img 1:</label>
                                            <input type="file" id="product_image1_input" name="image1" onchange="preview(this.name)"accept="image/*">
                                        </div>
                                    </div>
    
    
                                </div>
                                <div class="col-lg-4 ">
    
                                    <div style="height:108px;width: 192px; overflow:hidden;  display: flex; align-items: center; justify-content: center;" class="shadow-lg mx-3" >
    
                                        <img class=" " style = "max-width:224px;" loading="lazy" id = "product_image2_preview" src="/images/image.jpg">
                                        </div>
                                    <div class="mt-3">
                                        <div class="mb-3 ">
                                            <label for="avatar">Choose Product Img 2:</label>
                                            <input type="file" id = "product_image2_input" name="image2" onchange="preview(this.name)" accept="image/*">
                                        </div>
                                    </div>
    
                                </div>
                                <div class="col-lg-4 ">
    
                                    <div style="height:108px;width: 192px; overflow:hidden;  display: flex; align-items: center; justify-content: center;" class="shadow-lg mx-3" >
    
                                        <img class=" " style = "max-width:224px;" loading="lazy" id = "product_image3_preview" src="/images/image.jpg">
                                        </div>
                                    <div class="mt-3">
                                        <div class="mb-3 ">
                                            <label for="avatar">Choose Product Img 3:</label>
                                            <input type="file" id="product_image3_input" name="image3" onchange="preview(this.name)" accept="image/*">
                                        </div>
                                    </div>
                                </div>
                            </div>
    
                            <div class="mb-3">
                                <label for="exampleInputname" class="form-label">name</label>
                                <input type="text"  maxlength="100" placeholder="text limit 100 charaters"class="form-control" id="product_name_input" aria-describedby="">
    
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputLink" class="form-label">additional Link</label>
                                <input type="text" class="form-control" id="product_link_input" aria-describedby="">
    
                            </div>
                            <div class="mb-3">
                                <label for="exampleInputDescription" class="form-label">Description</label>
                                <textarea type="text" class="form-control" placeholder="text limit 800 characters."
                                maxlength="800"id="product_description_input" aria-describedby=""></textarea>
    
                            </div>
    
    
                            <button type="button" id = "product_submit_form" class="btn btn-danger bg-gradient my-4">Add New Product</button>
                        </form>
                    </div>
    
    
                    <div class="col-sm-12 col-md-12 col-lg-4 p-3 text-center">
    
                        <h2>Update Product Data?</h2>
    
    
                        <div class="list-group shadow-lg overflow-auto" id = "product_container" style="max-height: 600px;">
    
                            <!-- Update-Card -->
                            <div class="list-group-item list-group-item-action d-flex gap-3 py-3 content-hover-red"
                                aria-current="true">
    
    
                                <div style="max-height:100px; max-width:100px;  width:100%; overflow: hidden;"
                                    class="ratio ratio-1x1 shadow mx-auto">
                                    <img class="" src="image.jpg">
                                </div>
    
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <button type="button" class="btn text-start" data-bs-toggle="modal"
                                        data-bs-target="#updateProduct">
                                        <h5 class="mb-0 my-2">Name</h5>
                                        <p class="mt-2 mb-0 opacity-75">26 Nov 2000</p>
                                    </button>
    
                                </div>
                                <button type="button" class="btn-close" data-bs-toggle="modal" data-bs-target="#deleteProductModal" ></button>
                            </div>
                            
                        </div>
    
    
    
                    </div>
    
                </div>
            </div>
            </div>
    
        </main>
    
        <!-- updateProduct -->
    <div class="modal fade " id="updateProduct" tabindex="-1" aria-labelledby="updateProductLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateProductLabel">Update: <blue class="text-primary">Name
                        </blue> ?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <form>



                        <!-- image view -->
                        <div class="row">
                            <div class="col-4 ">

                                <img class="img-fluid" src="image.jpg">
                                <div class="mt-3">
                                    <div class="mb-3 ">
                                        <label for="avatar">Choose Product Img 1:</label>
                                        <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg">
                                    </div>
                                </div>


                            </div>
                            <div class="col-4 ">

                                <img class="img-fluid" src="image.jpg">
                                <div class="mt-3">
                                    <div class="mb-3 ">
                                        <label for="avatar">Choose Product Img 2:</label>
                                        <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg">
                                    </div>
                                </div>

                            </div>
                            <div class="col-4 ">

                                <img class="img-fluid" src="image.jpg">
                                <div class="mt-3">
                                    <div class="mb-3 ">
                                        <label for="avatar">Choose Product Img 3:</label>
                                        <input type="file" id="avatar" name="avatar" accept="image/png, image/jpeg">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="exampleInputname" class="form-label">name</label>
                            <input type="text" class="form-control" id="exampleInputname" aria-describedby="">

                        </div>
                        <div class="mb-3">
                            <label for="exampleInputLink" class="form-label">additional Link</label>
                            <input type="text" class="form-control" id="exampleInputLink" aria-describedby="">

                        </div>
                        <div class="mb-3">
                            <label for="exampleInputDescription" class="form-label">Description</label>
                            <textarea type="text" class="form-control" id="exampleInputDescription" aria-describedby="">
                      </textarea>

                        </div>

                        <div class="mb-3">
                            <label for="DateofInduction:">Date of Induction:</label>
                            <input type="date" id="DateofInduction:" name="DateofInduction:">
                        </div>


                        <button type="submit" class="btn btn-danger bg-gradient my-4">Update Product Data</button>
                    </form>




                    <span class="text-secondary" style="font-size: 15px;"> Are you sure you want to Update ? </span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

        <!-- delete product -->
        <div class="modal fade " id="deleteProductModal" tabindex="-1" aria-labelledby="deleteProductModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteProductModalLabel">Confirm Delete ?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <span class="text-secondary" style="font-size: 15px;"> Are you sure you want to Delete: <blue class="text-primary">Name</blue> ? </span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" 
                        data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger bg-gradient text-light">Delete</button>
                    </div>
                </div>
            </div>
        </div>

    <%- include("partials/footer",{contact1:contact1,contact2:contact2,email:email,address:address}); -%>

    <%- include("partials/tail"); -%>

    <script src = "/javascripts/console_product.js"></script>

  </body>

</html>
