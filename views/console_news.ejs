<!doctype html>
<html lang="en">

  <%- include("partials/head",{title:title,meta_description : meta_description}); -%>
  <style>
      #news_image_preview{

      }
      .image_set_news{
          height: 108px;
          width: 192px;
        overflow:hidden;
        display: flex;
        align-items: center;
        justify-content: center;

      }
  </style>
  <body>
    <%- include("partials/navbar",{role:role,contact1:contact1,contact2:contact2,email:email}); -%>

        <!-- Main content -->
        <main>

            <div class="container">
                <div class="row border rounded rounded-3 shadow-lg my-3">
                    <div class="col-sm-12 col-md-12 col-lg-6 p-5 ">
                        <form id = "news_create_form">
    
                            <h2>Add News Article</h2>
    
                            <!-- image view -->
                            <div class="row">
                                 <div class="image_set_news ">
                                    <img class="mx-auto" style = "max-width: 224px; " id = "news_image_preview" src="/images/image.jpg">
                                </div>
                                    <div class="mt-3">
                                        <div class="mb-3 ">
                                            <label for="news_image_input">Choose Article Img</label>
                                            <input type="file" id="news_image_input" name="news_image_input" onchange="preview_news()" accept="image/*">
                                        </div>
                                    </div>
    
    
                            </div>
    
                            <div class="mb-3">
                                <label for="news_headline_input" class="form-label">Headline</label>
                                <input type="text" class="form-control"
                                
                                id="news_headline_input" aria-describedby="">
    
                            </div>
                            <div class="mb-3">
                                <label for="news_link_input" class="form-label">additional Link</label>
                                <input type="text" class="form-control" id="news_link_input" aria-describedby="">
    
                            </div>
                            <div class="mb-3">
                                <label for="news_article_input" class="form-label">Article</label>
                                <textarea type="text" class="form-control" id="news_article_input" aria-describedby=""></textarea>
                            </div>
    
                            <!-- <div class="mb-3">
                                <label for="DateofInduction:">Date of Publishing:</label>
                                <input type="date" id="DateofInduction:" name="DateofInduction:">
                            </div> -->
    
    
                            <button type="submit" id = "news_form_submit" class="btn btn-danger bg-gradient my-4">Add New Article</button>
                        </form>
                    </div>
    
    
                    <div class="col-sm-12 col-md-12 col-lg-6 p-3 text-center">
    
                        <h2>Update Articles?</h2>
    
    
                        <div class="list-group shadow-lg overflow-auto" style="max-height: 800px;" id = "news_container">
    
                            <!-- Update-Card -->
                            <div class="list-group-item list-group-item-action d-flex gap-3 py-3 content-hover-red"
                                aria-current="true">
    
    
                                <div style="max-height:100px; max-width:100px;  width:100%; overflow: hidden;"
                                    class="ratio ratio-1x1 shadow mx-auto">
                                    <img class="" src="image.jpg">
                                </div>
    
                                <div class="d-flex gap-2 w-100 justify-content-between">
                                    <button type="button" style="background-color: transparent !important;"class="btn text-start" data-bs-toggle="modal"
                                        data-bs-target="#updateArticle">
                                        <h5 class="mb-0 my-2">Headlines</h5>
                                        <p class="mt-2 mb-0 opacity-75">26 Nov 2000</p>
                                    </button>
    
                                </div>
    
                                <button type="button" class="btn-close" data-bs-toggle="modal" data-bs-target="#deleteArticleModal" ></button>
                            </div>
    
                            
                        </div>
    
    
    
                    </div>
    
                </div>
            </div>
            </div>
    
        </main>

            <!-- updatearticle -->
    <div class="modal fade " id="updateArticle" tabindex="-1" aria-labelledby="updateArticleLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateArticleLabel">Update: <blue class="text-primary">
                        </blue> ?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <form>

                       

                        <!-- image view -->
                        <div class="row">
                            
                                <img class="img-fluid" style = "max-height:250px;max-width:250px;" id = "update_image_preview" src="">
                                <div class="mt-3">
                                    <div class="mb-3 ">
                                        <label for="update_image_input">Choose Article Img</label>
                                        <input type="file" id="update_image_input" name="image" onchange="update_preview()" accept="image/*">
                                    </div>
                                </div>


                        </div>

                        <div class="mb-3">
                            <label for="update_headline_input" class="form-label">Headline</label>
                            <input type="text" class="form-control" id="update_headline_input" maxlength="30"  aria-describedby="">

                        </div>
                        <div class="mb-3">
                            <label for="update_link_input" class="form-label">additional Link</label>
                            <input type="text" class="form-control" id="update_link_input" aria-describedby="">

                        </div>
                        <div class="mb-3">
                            <label for="update_article_input" class="form-label">Article</label>
                            <textarea type="text" class="form-control" id="update_article_input" aria-describedby="" ></textarea>

                        </div>


                        <button type="submit" class="btn btn-danger bg-gradient my-4" id = "update_btn">Update News Article</button>
                    </form>


                    <span class="text-secondary" style="font-size: 15px;"> Are you sure you want to Update ? </span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

        <!-- delete Article -->

        <div class="modal fade " id="deleteArticleModal" tabindex="-1" aria-labelledby="deleteArticleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteArticleModalLabel">Confirm Delete ?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <span class="text-secondary" style="font-size: 15px;"> Are you sure you want to Delete: <blue class="text-primary">Article</blue> ? </span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" 
                        data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger bg-gradient text-light">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    
    

    <%- include("partials/footer",{contact1:contact1,contact2:contact2,email:email,address:address}); -%>

    <%- include("partials/tail"); -%>

    <script src = "/javascripts/console_news.js"></script>

  </body>

</html>
