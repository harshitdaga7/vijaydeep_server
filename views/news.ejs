                    <h1 ><%= news[i].headline %> </h1>
                    <p class="small">
                        <img src="/images/icons8-calendar-30.png" height="26px" width="auto"> <%= news[i].createdAt %> 
                    </p>
                    <p style="font-size: medium;"><%= news[i].article %> </p>
                    <a href="<%= news[i].link %> ">//LInk for more info</a>
    
                </div>
                
    
    
            </div>




             <% }else{ %>

