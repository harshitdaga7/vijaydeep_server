                        <h1 ><%= news[i].headline %> </h1>
                        <p class="small">
                            <img src="/images/icons8-calendar-30.png" height="26px" width="auto"> <%= news[i].createdAt %> 
                        </p>
                        <p style="font-size: medium;"><%= news[i].article %> </p>
                        <a href="<%= news[i].link %> ">//LInk for more info</a>
        
                    </div>
                    <div class="col-md-12 col-sm-12 col-lg-3 position-sticky order-lg-1 order-0" >
                        <img style=" height:100%" src="/images/<%= news[i].image %> " class="zoom  d-block w-100" alt="..." loading = "lazy">
        
                    </div>
        
        
                </div>


                
              <% } %>


    
        <% } %> 

